<header>
    <div class="header container">
        <div class="social">
            <a href="#"><i class="fab fa-linkedin"></i></a>
            <a href="#"><i class="fab fa-facebook-square"></i></a>
            <a href="#"><i class="fab fa-youtube-square"></i></a>
        </div>

        <h1><a href="@Url.Action("Index", "Home")">Estagiei</a></h1>

        <div class="welcome">
            @if (Session["nome"] != null)
            {
                <p>Olá, @Session["nome"]!</p>
                <p><a href="@Url.Action("Logout", "Usuario")">Sair</a></p>

            }
            else
            {
                <p>Olá, visitante!</p>
                <p><a href="@Url.Action("Login", "Usuario")">Faça login</a> ou <a href="@Url.Action("Cadastro", "Usuario")">cadastre-se</a></p>
            }
        </div>
    </div>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse div-nav" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Login", "Usuario")">Faça login</a></li>
                    <li><a href="@Url.Action("Cadastro", "Usuario")">Cadastre-se</a></li>
                    <li class="social">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-facebook-square"></i></a>
                        <a href="#"><i class="fab fa-youtube-square"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>